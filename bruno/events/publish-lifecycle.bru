meta {
  name: Publish Lifecycle Event
  type: http
  seq: 4
}

post {
  url: {{BASE_URL}}/events
  body: json
  auth: none
}

body:json {
  {
    "type": "lifecycle",
    "source": "bruno:test",
    "action": "started",
    "details": "Service initialized via Bruno test"
  }
}

assert {
  res.status: eq 201
  res.body.status: eq published
  res.body.id: isDefined
}

script:post-response {
  const result = res.getBody();
  console.log('Published lifecycle event:', result.id);
}
