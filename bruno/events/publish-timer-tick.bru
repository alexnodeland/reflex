meta {
  name: Publish Timer Tick
  type: http
  seq: 3
}

post {
  url: {{BASE_URL}}/events
  body: json
  auth: none
}

body:json {
  {
    "type": "timer.tick",
    "source": "bruno:test",
    "timer_name": "heartbeat",
    "tick_count": 42
  }
}

assert {
  res.status: eq 201
  res.body.status: eq published
  res.body.id: isDefined
}

script:post-response {
  const result = res.getBody();
  console.log('Published timer event:', result.id);
}
