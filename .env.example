# Database
DATABASE_URL=postgresql+asyncpg://reflex:reflex@localhost:5432/reflex
DATABASE_POOL_SIZE=5
DATABASE_POOL_MAX_OVERFLOW=10

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Locking
# Use "memory" for single-process, "postgres" for distributed (Kubernetes)
LOCK_BACKEND=memory

# Observability
LOGFIRE_TOKEN=
LOG_LEVEL=INFO

# AI
OPENAI_API_KEY=
DEFAULT_MODEL=openai:gpt-4o-mini

# Event Processing
EVENT_MAX_ATTEMPTS=3
EVENT_RETRY_BASE_DELAY=1.0
EVENT_RETRY_MAX_DELAY=60.0

# App
ENVIRONMENT=development
VERSION=0.1.0
